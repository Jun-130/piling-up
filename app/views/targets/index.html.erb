<%= form_with model: @target, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      目標金額の入力
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">目標期限</label>
    </div>
    <%= f.date_select(
        :deadline,
        class:'year-month',
        id:"year-month",
        use_month_numbers: true,
        selected: Time.now,
        start_year: (Time.now.year - 1),
        end_year: (Time.now.year + 1),
        discard_day: true
        ) %>
  </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">目標金額</label>
    </div>
    <%= f.text_area :amount %>
  </div>

  <%= f.hidden_field :status, value: 0 %>

  <br>
  <div class='register-btn'>
    <%= f.submit "目標金額を設定" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>


<% @targets.each do |target| %>
  <div class="user__nickname">
    目標金額: <%= target.amount %>
  </div>
  <div class="user__email">
    目標期限: <%= target.deadline.strftime("%Y年%-m月") %>
  </div>
<% end %>
