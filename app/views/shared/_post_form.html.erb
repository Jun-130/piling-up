<div class="form-group">
  <div class='form-text-wrap'>
    <label class="form-text">年月</label>
  </div>
  <%= f.date_select(
      :month,
      class:'month-select',
      use_month_numbers: true,
      selected: Time.now,
      start_year: (Time.now.year - 1),
      end_year: (Time.now.year + 1),
      discard_day: true
      ) %>
</div>
<div class="form-group">
  <div class='form-text-wrap'>
    <label class="form-text">月の手取り</label>
  </div>
  <%= f.number_field :net_income, data: { autonumeric: true } %>
</div>
